# AI Galaxy Platform - Environment Variables for Docker Deployment
# Copy this to .env and fill in your values

# ======================
# DATABASE CONFIGURATION
# ======================
DB_PASSWORD=ai_galaxy_secure_password_2024

# ======================
# REDIS CONFIGURATION
# ======================
REDIS_PASSWORD=redis_secure_password_2024

# ======================
# APPLICATION SECRETS
# ======================
SESSION_SECRET=your-super-secret-session-key-minimum-32-characters-long

# ======================
# ADMIN CONFIGURATION
# ======================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=secure_admin_password_2024

# ======================
# DOMAIN CONFIGURATION
# ======================
DOMAIN=ai-galaxy.yourdomain.com
APP_URL=https://ai-galaxy.yourdomain.com

# ======================
# SSL CONFIGURATION
# ======================
SSL_EMAIL=your-email@domain.com
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# ======================
# OPTIONAL: THIRD-PARTY SERVICES
# ======================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# SENTRY_DSN=https://your-sentry-dsn
# GOOGLE_ANALYTICS_ID=GA-XXXXX

# ======================
# BACKUP CONFIGURATION
# ======================
BACKUP_S3_BUCKET=ai-galaxy-backups
BACKUP_S3_REGION=ap-beijing
BACKUP_S3_ACCESS_KEY=your-access-key
BACKUP_S3_SECRET_KEY=your-secret-key