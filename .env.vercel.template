# ================================
# VERCEL 生产环境变量配置模板
# ================================
# 复制以下变量到 Vercel Dashboard → Project Settings → Environment Variables

# ==================== 必需配置 ====================

# 数据库连接 (必需)
# 选项1: 使用 Vercel Postgres (推荐)
DATABASE_URL=""
# Vercel Postgres 会自动填充以下变量:
POSTGRES_URL=""
POSTGRES_PRISMA_URL=""
POSTGRES_URL_NON_POOLING=""
POSTGRES_USER=""
POSTGRES_HOST=""
POSTGRES_PASSWORD=""
POSTGRES_DATABASE=""

# 选项2: 外部 PostgreSQL 数据库
# DATABASE_URL="postgresql://username:password@host:5432/database?sslmode=require"

# ==================== 安全配置 ====================

# 会话密钥 (建议设置，留空会自动生成)
SESSION_SECRET=""

# 管理员账户 (可选，默认 admin@example.com / admin123)
ADMIN_EMAIL=""
ADMIN_PASSWORD=""

# ==================== 应用配置 ====================

# 应用基本信息
NEXT_PUBLIC_APP_NAME="AI Galaxy"
NEXT_PUBLIC_APP_VERSION="2.1.5"

# 性能优化
FORCE_CACHE_REFRESH="v2.1.5"

# ==================== 功能配置 ====================

# 反馈系统配置 (可选)
NEXT_PUBLIC_FEEDBACK_PRODUCT_URL=""
NEXT_PUBLIC_FEEDBACK_PLATFORM_URL=""

# 教程配置 (可选)
NEXT_PUBLIC_TUTORIAL_URL=""

# ==================== 开发配置 ====================
# 以下变量仅在开发环境使用，生产环境请设为 false 或留空

# 调试模式
DEBUG="false"
NODE_ENV="production"

# 数据库调试
DATABASE_DEBUG="false"

# ==================== 部署配置 ====================

# Vercel 特定配置
VERCEL="1"
VERCEL_ENV="production"

# 时区设置
TZ="Asia/Shanghai"

# ==================== 性能优化 ====================

# 图片优化域名 (如使用 CDN)
NEXT_PUBLIC_IMAGE_DOMAINS=""

# API 请求超时 (秒)
API_TIMEOUT="30"

# 数据库连接池大小
DATABASE_POOL_SIZE="10"